[flake8]
# Maximum line length
max-line-length = 100

# Ignore certain errors to maintain Black compatibility
# E203: whitespace before ':' (conflicts with Black)
# E501: line too long (Black handles this)
# W503: line break before binary operator (conflicts with Black)
# W291: trailing whitespace (Black should handle, but keeping for now)
# W293: blank line contains whitespace (Black should handle, but keeping for now)
# E402: module level import not at top of file (sometimes needed)
# F541: f-string is missing placeholders (used for code clarity)
# F841: local variable assigned but never used (often for clarity/future use)
# E302: expected 2 blank lines (formatting - low priority)
# E305: expected 2 blank lines after class/function (formatting - low priority)
# E301: expected 1 blank line (formatting - low priority)
# E128: continuation line under-indented (formatting)
ignore = E203,E501,W503,W291,W293,E402,F541,F841,E302,E305,E301,E128

# Exclude certain directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    Archive,
    OldFiles,
    deleteme

# Per-file ignores
# __init__.py:F401 - Allow unused imports in __init__.py files
# tests/*:F401,E722 - Test files may have unused imports and bare excepts for testing
per-file-ignores =
    __init__.py:F401
    tests/*.py:F401,E722,F811
